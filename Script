using System.Globalization;
using System;

class ConvertisseurTemperature
{
    public double celsius {get; set;}
    public double fahrenheit {get; set;}
    public double kelvin {get; set;}

    public void CelsiusToFahrenheit()
    {
        double CelsiusToFahrenheitReponse = celsius*9/5;
        CelsiusToFahrenheitReponse = CelsiusToFahrenheitReponse+32;

        Console.WriteLine($"{celsius} °C = {CelsiusToFahrenheitReponse} °F");
    }

    public void CelsiusToKelvin()
    {
        double CelsiusToKelvinReponse = celsius+273.15;

        Console.WriteLine($"{celsius} °C = {CelsiusToKelvinReponse} K");
    }

    public void FahrenheitToCelsius()
    {
        double ReponseConvF = fahrenheit-32;
        ReponseConvF = ReponseConvF/1.8;

        Console.WriteLine($"{fahrenheit} °F = {ReponseConvF} °C");
    }

    public void FahrenheitToKelvin()
    {
        double FahrenheitToKelvinReponse = (fahrenheit + 459.67) * 5 / 9;

        Console.WriteLine($"{fahrenheit} °F = {FahrenheitToKelvinReponse} K");
    }

    public void KelvinToCelsius()
    {
        double KelvinToCelsiusReponse = kelvin-273.15;

        Console.WriteLine($"{kelvin} K = {KelvinToCelsiusReponse} °C");
    }

    public void KelvinToFahrenheit()
    {
        double KelvinToFahrenheitReponse = (kelvin*9/5)-459.67;

        Console.WriteLine($"{kelvin} K = {KelvinToFahrenheitReponse} °F");
    }
}

class ConvertisseurLongueur
{
    public double millimetre {get; set;}
    public double centimetre {get; set;}
    public double metre {get; set;}
    public double kilometre {get; set;}
    public double pouce {get; set;}
    public double pied {get; set;}
    public double mile {get; set;}
    public double yard {get; set;}

    //Millimetre
    public void MillimetreToCentimetre()
    {
        double MillimetreToCentimetreResultat = millimetre/10;

        Console.WriteLine($"{millimetre} mm = {MillimetreToCentimetreResultat} cm");
    }

    public void MillimetreToMetre()
    {
        double MillimetreToMetreResultat = millimetre/1000;

        Console.WriteLine($"{millimetre} mm = {MillimetreToMetreResultat} m");
    }

    public void MillimetreToKilometre()
    {
        double MillimetreToKilometreResultat1 = millimetre/1000000;
        string val = MillimetreToKilometreResultat1.ToString();
        double MillimetreToKilometreResultat2;
        bool hasExponential = (val.Contains("E") || val.Contains("e")) && double.TryParse(val, out MillimetreToKilometreResultat1);
        if (hasExponential)
        {
            decimal MillimetreToKilometreResultat3 = decimal.Parse(val, NumberStyles.Float);
            Console.WriteLine($"{millimetre} mm = {MillimetreToKilometreResultat3} km");
        }
    }

    public void MillimetreToPouce()
    {
        double MillimetreToPouceResultat = millimetre/25.4;

        Console.WriteLine($"{millimetre} mm = {MillimetreToPouceResultat} inch");
    }

    public void MillimetreToPied()
    {
        double MillimetreToPiedResultat = millimetre/304.7999902464;

        Console.WriteLine($"{millimetre} mm = {MillimetreToPiedResultat} ft");
    }

    public void MillimetreToMiles()
    {
        double MillimetreToMilesResultat1 = millimetre/1612903.2258065;
        string val = MillimetreToMilesResultat1.ToString();
        double MillimetreToMilesResultat2;
        bool hasExponential = (val.Contains("E") || val.Contains("e")) && double.TryParse(val, out MillimetreToMilesResultat2);
        if (hasExponential)
        {
            decimal MillimetreToMilesResultat3 = decimal.Parse(val, NumberStyles.Float);
            Console.WriteLine($"{millimetre} mm = {MillimetreToMilesResultat3} mi");
        }

    }

    public void MillimetreToYard()
    {
        double MillimetreToYardResultat = millimetre/914.4;

        Console.WriteLine($"{millimetre} mm  = {MillimetreToYardResultat} yd");
    }

